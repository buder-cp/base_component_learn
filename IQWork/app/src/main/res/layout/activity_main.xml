<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jump_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jumpTest" />

    <Button
        android:id="@+id/Bluetooth_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jump_btn"
        android:layout_marginTop="20dp"
        android:text="Bluetooth" />

    <Button
        android:id="@+id/native_heap_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Bluetooth_btn"
        android:layout_marginTop="20dp"
        android:text="heap_analycis" />

    <Button
        android:id="@+id/signal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/native_heap_test"
        android:layout_marginTop="20dp"
        android:text="heap_analycis" />

</RelativeLayout>